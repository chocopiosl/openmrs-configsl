                const hrConceptUuid = '3ce93824-26fe-102b-80cb-0017a47871b2';
                const temperatureConceptUuid = '3ce939d2-26fe-102b-80cb-0017a47871b2';
                const respiratoryRateConceptUuid = '3ceb11f8-26fe-102b-80cb-0017a47871b2';
                const o2SatConceptUuid = '3ce9401c-26fe-102b-80cb-0017a47871b2';
                const pregnancyHistoryConstruct = '163588AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA';
                const obGynEncounterType= 'd83e98fd-dc7b-420f-aa3f-36f648b4483d';
                const typeOfVisit = '164181AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA';
                const intakeVisit = '164180AAAAAAAAAAAAAAAAAAAAAAAAAAAAAA';
                const whProcedurePerformed="1651AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA";
                const whProcedures="57755670-c183-494b-bd5e-723e0978c3e3";
                const whSterilizationProcedures = "46cbbdd9-9cc2-42c6-8ecb-4dbe6ea01354";

                const lastPeriodDateConcept = '<lookup expression="fn.getConcept('CIEL:1427').uuid"/>';
                const dueDateConcept = '<lookup expression="fn.getConcept('CIEL:5596').uuid"/>';
                const trimAtEnrollConcept = '<lookup expression="fn.getConcept('PIH:11661').uuid"/>';
                const firstTrimConcept = '<lookup expression="fn.getConcept('CIEL:1721').uuid"/>';
                const secondTrimConcept = '<lookup expression="fn.getConcept('CIEL:1722').uuid"/>';
                const thirdTrimConcept = '<lookup expression="fn.getConcept('CIEL:1723').uuid"/>';
                const gravidaConcept = '<lookup expression="fn.getConcept('CIEL:5624').uuid"/>';
                const paraConcept = '<lookup expression="fn.getConcept('CIEL:1053').uuid"/>';
                const abortusConcept = '<lookup expression="fn.getConcept('CIEL:1823').uuid"/>';
                const livingConcept = '<lookup expression="fn.getConcept('CIEL:1825').uuid"/>';
                const menstruationConcept = '<lookup expression="fn.getConcept('CIEL:160600').uuid"/>';
                const regularMenstrConcept = '<lookup expression="fn.getConcept('CIEL:1065').uuid"/>';
                const irregularMenstrConcept = '<lookup expression="fn.getConcept('CIEL:1066').uuid"/>';
                const regularTxt = '<uimessage code="pihcore.regular"/>';
                const irregularTxt = '<uimessage code="pihcore.irregular"/>';
                const visitDiagConcept = '<lookup expression="fn.getConcept('PIH:Visit Diagnoses').uuid"/>';
                const diagConcept = '<lookup expression="fn.getConcept('PIH:DIAGNOSIS').uuid"/>';
                const dysmenorConcept = '<lookup expression="fn.getConcept('CIEL:127').uuid"/>';
                const durationMenstCycleConcept = '<lookup expression="fn.getConcept('CIEL:160597').uuid"/>';
